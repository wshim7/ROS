    <param name="SIMULATOR_IP"   value="161.122.112.50"/>
    <!--param name="SIMULATOR_PORT" value="8000"/-->
    <param name="SIMULATOR_PORT" value="11111"/>

	<!--E-robot -->
	<param name="E-ROBOT_COM_PORT_BASE" value="ttyMP0"/>
