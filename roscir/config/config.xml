<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config SYSTEM "config.dtd">

<config>
    <!-- ========================================================== -->
    <!-- Initial Variables for Common Classes.. -->
    <!-- ========================================================== -->
    <!-- Client I/O Device Type : 1=RTAI, 2=Simulator, 3=TCPStub, 4=UPnPCP -->
